<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shinobi="http://schemas.android.com/apk/res-auto/com.shinobicontrols"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:id="@+id/template_shinnobi_pie_Container"        
    tools:context=".HelloPieChartActivity" >
        
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	
	    <com.shinobicontrols.chart.Chart
	        android:id="@+id/mobile_os_chart"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        style="@style/sc_Midnight" >
	        

	        <com.shinobicontrols.chart.series.Pie
	            android:id="@+id/mobile_os_pie" />
	        
	    </com.shinobicontrols.chart.Chart>
        
    </LinearLayout>
    
</LinearLayout>