<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    

	<ImageView
		        android:id="@+id/Sindicato_Ingreso_Imagen"
		        android:layout_width="100dp"
		        android:layout_height="100dp"
		        />
		    
	 <TextView android:id="@+id/Sindicato_Ingreso_Nombre"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"    
		    android:textSize="16dp"     
		    />
	 
	 <TextView android:id="@+id/Sindicato_Ingreso_Vicepresidencia"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"    
		    android:textSize="12dp"     
		    />
	 
	 <TextView android:id="@+id/Sindicato_Ingreso_Cargo"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"    
		    android:textSize="12dp"     
		    />
	 
	 <TextView android:id="@+id/Sindicato_Ingreso_Sindicato"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"    
		    android:textSize="12dp"     
		    />

</LinearLayout>